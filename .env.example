# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# HttpClient (Axios) - baseURL e headers padr√£o
HTTP_CLIENT_BASE_URL=https://api.example.com/v1
HTTP_CLIENT_TIMEOUT=15000
# Headers em JSON (opcional)
# HTTP_CLIENT_HEADERS={"Authorization":"Bearer token","X-App-Key":"xxx"}

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_ALGORITHM=HS256
JWT_ISSUER=your-app-name
JWT_AUDIENCE=your-app-audience

# OAuth 2.0 Configuration (Google example)
OAUTH_CLIENT_ID=your-google-client-id
OAUTH_CLIENT_SECRET=your-google-client-secret
OAUTH_REDIRECT_URI=http://localhost:3000/auth/oauth/callback
OAUTH_AUTHORIZATION_URL=https://accounts.google.com/o/oauth2/v2/auth
OAUTH_TOKEN_URL=https://oauth2.googleapis.com/token
OAUTH_USER_INFO_URL=https://www.googleapis.com/oauth2/v2/userinfo
OAUTH_SCOPE=openid,profile,email

# OpenID Connect Configuration (Auth0 example)
OPENID_CLIENT_ID=your-auth0-client-id
OPENID_CLIENT_SECRET=your-auth0-client-secret
OPENID_REDIRECT_URI=http://localhost:3000/auth/openid/callback
OPENID_DISCOVERY_URL=https://your-domain.auth0.com/.well-known/openid-configuration
OPENID_ISSUER=https://your-domain.auth0.com/
OPENID_JWKS_URI=https://your-domain.auth0.com/.well-known/jwks.json
OPENID_SCOPE=openid,profile,email

# Database Configuration (example)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mydb
DB_USER=postgres
DB_PASSWORD=password

# Feature Flags
FEATURE_AUTH=true
FEATURE_CACHE=false
DEBUG_MODE=false

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200
CORS_METHODS=GET,POST,PUT,DELETE,PATCH

# Application Configuration
APP_NAME=Frani SDK
APP_VERSION=1.0.0
